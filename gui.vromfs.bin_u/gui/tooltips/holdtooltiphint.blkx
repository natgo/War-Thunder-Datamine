{
  "id": "__delayed_tooltip_hint__",
  "total-input-transparent": "yes",
  "css-hier-invalidate": "yes",
  "smallHint": {
    "position": "absolute",
    "pos": "-50%w, -h -2@sf/@pf",
    "flow": "vertical",
    "css-hier-invalidate": "yes",
    "tdiv": [
      {
        "flow": "horizontal",
        "halign": "center",
        "contextMenuHint": "yes",
        "display": "hide",
        "img": {
          "size": "1@infoCircleSize, 1@infoCircleSize",
          "margin-left": "(1@infoBtnIconSize - 1@infoCircleSize) / 2",
          "margin-right": "(1@infoBtnIconSize - 1@infoCircleSize) / 2 + @blockInterval",
          "pos": "0, 50%ph-50%h",
          "position": "relative",
          "background-svg-size": "1@infoCircleSize, 1@infoCircleSize",
          "background-image": "ui/gameuiskin#slot_menu.svg"
        },
        "text": {
          "pos": "0, 50%ph-50%h",
          "position": "relative",
          "margin": "@blockInterval, 0",
          "text": "#hint/pressBtn/short",
          "tinyFont": "yes"
        },
        "ButtonImg": {
          "size": "1@infoBtnIconSize, 1@infoBtnIconSize",
          "pos": "0, 50%ph-50%h",
          "position": "relative",
          "btnName": "A"
        }
      },
      {
        "flow": "horizontal",
        "halign": "center",
        "img": {
          "size": "1@infoCircleSize, 1@infoCircleSize",
          "margin-left": "(1@infoBtnIconSize - 1@infoCircleSize) / 2",
          "margin-right": "(1@infoBtnIconSize - 1@infoCircleSize) / 2 + @blockInterval",
          "pos": "0, 50%ph-50%h",
          "position": "relative",
          "background-svg-size": "1@infoCircleSize, 1@infoCircleSize",
          "background-image": "#ui/gameuiskin#question_icon.svg"
        },
        "text": {
          "pos": "0, 50%ph-50%h",
          "position": "relative",
          "margin": "@blockInterval, 0",
          "text": "#hint/holdBtn/short",
          "tinyFont": "yes"
        },
        "ButtonImg": {
          "size": "1@infoBtnIconSize, 1@infoBtnIconSize",
          "pos": "0, 50%ph-50%h",
          "position": "relative",
          "btnName": "A"
        }
      }
    ]
  }
}